---
import '../../../components/player.page.ts';
import playerData from '../../../data/players.json';
import { playerDataService } from '../../../services/playerdata/playerdata.service.ts';
const { params } = Astro.request;
const serverJsonData = await playerDataService.getData(params.playerId);
export function getStaticPaths() {
  return playerData.data;
}

const props = {
  'player-name': params.playerName,
  'player-id': params.playerId,
  'server-json-data': JSON.stringify(serverJsonData)
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{params.playerName} - better-kickbase</title>
  </head>
  <body>
    <bkb-player {...props} client:load></bkb-player>
  </body>
</html>
